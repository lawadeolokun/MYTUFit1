<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Header TextView -->

        <!-- Inner layout for buttons -->

        <TextView
            android:id="@+id/tvCommunityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Community Page"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnWeightLoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Loss Chat"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnWeightGain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Gain Chat"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnRunningGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running Group Chat"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnBestSnacksForProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Snacks and Meals"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnStretches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stretching Tips"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnGeneralChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Chat"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

