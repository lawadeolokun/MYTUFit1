<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvCommunityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Page"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnWeightLoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Loss"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnWeightGain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Gain"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnRunningGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running Group"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnBestSnacksForProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Snacks for Protein"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnStretches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stretches"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnGeneralChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Chat"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
