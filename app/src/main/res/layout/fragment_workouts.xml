<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar for back navigation -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarWorkouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Workouts"
        android:titleTextColor="@android:color/white"/>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Daily Challenge Card -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Challenge"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="16dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jog for 30 minutes"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/>

            <!-- Workout summary -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 Workouts done today âœ“"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />

            <!-- Workout category buttons -->
            <Button
                android:id="@+id/btnBackWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back workouts"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnLegWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leg workouts"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnArmWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arms workouts"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
